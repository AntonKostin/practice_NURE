@using practice_TrekCompany.Models.spares.sparesFrameset
@using practice_TrekCompany.Models.spares
@model IEnumerable<Frame>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container">
    <h1 class="jumbotron-heading text-center">Деталі</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Найменування</th>
                <th scope="col">Кількість</th>
            </tr>
        </thead>

        @{
            int i = 1;
        }

        @foreach (var frame in Model)
        {
                        <tbody>
                            <tr>
                                <th scope="row">@i</th>
                                <td>@frame.FrameName</td>
                                <td>@frame.FrameQuantity</td>
                            </tr>
                @{
                    i++;
                }
                        </tbody>
        }

    </table>

</div>