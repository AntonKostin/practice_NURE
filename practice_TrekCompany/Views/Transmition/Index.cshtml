@using practice_TrekCompany.Models.spares.sparesGroopset
@using practice_TrekCompany.Models.spares
@model IEnumerable<Transmition>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="container">
    <h1 class="jumbotron-heading text-center">Деталі</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Складові Трансмісії</th>
                <th scope="col">Кількість</th>
            </tr>
        </thead>

        @{
            int i = 1;
        }

        @foreach (var transmition in Model)
        {
                            <tbody>
                                <tr>
                                    <th scope="row">@i</th>
                                            <td>@transmition.Cassette.CassetteName, 
                                                @transmition.Shifter.ShifterName, 
                                                @transmition.Switch.SwitchName</td>
                                    <td>@transmition.TransmitionQuantity</td>
                                </tr>
                @{
                    i++;
                }
                            </tbody>
        }

    </table>

</div>