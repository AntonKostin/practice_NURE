@using practice_TrekCompany.Models.production;
@model IEnumerable<Bike>

@{
    ViewData["Title"] = "Home Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Велосипеди</h1>
    </div>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row"> 
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.bikeImage" width="100%" height="250" alt="Card image cap">
                            <div class="card-body">
                            <p class="card-text">@item.bikeName</p>
                            <p class="card-text">Категорія: @item.TypeOfBike.typeName</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Bike" asp-action="Detail" asp-route-id="@item.bikeId" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                <small class="text-muted">@item.bikePrice грн.</small>  
                                </div>
                            </div>
                        </div>
                    </div> 
                  }
            </div>
        </div>
    </div>
</section>